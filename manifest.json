{
  "manifest_version": 3,
  "name": "T&C Summarizer Chatbot",
  "version": "1.0",
  "description": "Summarizes terms and conditions using AI.",
  "permissions": ["contextMenus","sidePanel"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
        "default_path": "popup.html"
    },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
     "default_title": "Click to open panel",
     "default_popup": "popup.html"
  }
}
